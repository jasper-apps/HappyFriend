<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="0dp" />

    <com.yterletskyi.happyfriend.common.view.PinKeyboardButtonView
        android:id="@+id/btn1"
        style="@style/PinKeyboardButtonStyle"
        android:text="1"
        app:layout_constraintEnd_toStartOf="@id/btn2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guidelineTop1" />

    <com.yterletskyi.happyfriend.common.view.PinKeyboardButtonView
        android:id="@+id/btn2"
        style="@style/PinKeyboardButtonStyle"
        android:text="2"
        app:layout_constraintEnd_toStartOf="@id/btn3"
        app:layout_constraintStart_toEndOf="@id/btn1"
        app:layout_constraintTop_toTopOf="@id/guidelineTop1" />

    <com.yterletskyi.happyfriend.common.view.PinKeyboardButtonView
        android:id="@+id/btn3"
        style="@style/PinKeyboardButtonStyle"
        android:text="3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn2"
        app:layout_constraintTop_toTopOf="@id/guidelineTop1" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/guidelineTop2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="btn1,btn2,btn3" />

    <com.yterletskyi.happyfriend.common.view.PinKeyboardButtonView
        android:id="@+id/btn4"
        style="@style/PinKeyboardButtonStyle"
        android:text="4"
        app:layout_constraintEnd_toStartOf="@id/btn5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guidelineTop2" />

    <com.yterletskyi.happyfriend.common.view.PinKeyboardButtonView
        android:id="@+id/btn5"
        style="@style/PinKeyboardButtonStyle"
        android:text="5"
        app:layout_constraintEnd_toStartOf="@id/btn6"
        app:layout_constraintStart_toEndOf="@id/btn4"
        app:layout_constraintTop_toTopOf="@id/guidelineTop2" />

    <com.yterletskyi.happyfriend.common.view.PinKeyboardButtonView
        android:id="@+id/btn6"
        style="@style/PinKeyboardButtonStyle"
        android:text="6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn5"
        app:layout_constraintTop_toTopOf="@id/guidelineTop2" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/guidelineTop3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="btn4,btn5,btn6" />

    <com.yterletskyi.happyfriend.common.view.PinKeyboardButtonView
        android:id="@+id/btn7"
        style="@style/PinKeyboardButtonStyle"
        android:text="7"
        app:layout_constraintEnd_toStartOf="@id/btn8"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/guidelineTop3" />

    <com.yterletskyi.happyfriend.common.view.PinKeyboardButtonView
        android:id="@+id/btn8"
        style="@style/PinKeyboardButtonStyle"
        android:text="8"
        app:layout_constraintEnd_toStartOf="@id/btn9"
        app:layout_constraintStart_toEndOf="@id/btn7"
        app:layout_constraintTop_toTopOf="@id/guidelineTop3" />

    <com.yterletskyi.happyfriend.common.view.PinKeyboardButtonView
        android:id="@+id/btn9"
        style="@style/PinKeyboardButtonStyle"
        android:text="9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn8"
        app:layout_constraintTop_toTopOf="@id/guidelineTop3" />

    <androidx.constraintlayout.widget.Barrier
        android:id="@+id/guidelineTop4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="bottom"
        app:constraint_referenced_ids="btn7,btn8,btn9" />

    <com.yterletskyi.happyfriend.common.view.PinKeyboardButtonView
        android:id="@+id/btn0"
        style="@style/PinKeyboardButtonStyle"
        android:text="0"
        app:layout_constraintEnd_toEndOf="@id/btn8"
        app:layout_constraintStart_toStartOf="@id/btn8"
        app:layout_constraintTop_toTopOf="@id/guidelineTop4" />

    <com.yterletskyi.happyfriend.common.view.PinKeyboardButtonView
        android:id="@+id/btnErase"
        style="@style/PinKeyboardButtonStyle"
        android:src="@drawable/ic_round_backspace_24"
        app:layout_constraintEnd_toEndOf="@id/btn9"
        app:layout_constraintStart_toStartOf="@id/btn9"
        app:layout_constraintTop_toTopOf="@id/guidelineTop4" />

</merge>