<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HappyFriend" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_accent</item>
        <item name="colorPrimaryVariant">@color/pink_light</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_light</item>
        <item name="colorSecondaryVariant">@color/yellow_dark</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="textColorPrimary">@color/black</item>
        <item name="textColorSecondary">@color/silver</item>
    </style>

</resources>
