<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HappyFriend" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mauvelous</item>
        <item name="colorPrimaryVariant">@color/mauvelous</item>
        <item name="colorOnPrimary">@android:color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_700</item>
        <item name="colorSecondaryVariant">@color/purple_700</item>
        <item name="colorOnSecondary">@color/mercury</item>

        <!-- Customize your theme here. -->
        <item name="textColorPrimary">@android:color/black</item>
        <item name="textColorSecondary">@color/silver_chalice</item>

        <item name="colorOnSurface">@color/mercury</item>
        <item name="colorError">@color/alizarin_crimson</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorSecondaryVariant</item>

    </style>
</resources>
